---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title='La Tavola'>
	<Header />
    <section>
        <h1>Reservar</h1>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Maiores, nihil consequatur illo reprehenderit doloribus deleniti delectus sunt hic veniam at aliquam unde quia? Officia, aperiam non sint quae natus voluptate!</p>
        <span><a href="tel:+34 611 54 91 39">+34 123 456 789</a></span>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d195753.2181555721!2d3.894136894271909!3d39.94935135113496!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12be1f9d2cb820e9%3A0x529ac484178e77c9!2sMenorca!5e0!3m2!1ses!2ses!4v1743175275862!5m2!1ses!2ses" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </section>
	<Footer />
</Layout>

<style>
    section {
        min-height: calc(100vh - 510px);
        margin-bottom: 100px;
    }

    h1 {
        text-align: center;
        font-size: 3rem;
        margin-top: 200px;
        color: #36392D;
        font-weight: 800;
        width: 100%;
        text-align: center;
    }

    p {
        width: 600px;
        max-width: 90%;
        margin: auto;
        text-align: center;
        line-height: 1.5rem;
        margin-top: 0;
    }

    span {
        font-size: 1.5rem;
        font-weight: 500;
        padding: 10px 20px;
        background-color: #36392D;
        color: white;
        border-radius: 20px;
        display: block;
        margin: auto;
        width: fit-content;
        margin-top: 30px;
        cursor: pointer;
        transition: all 0.2s;
        margin-bottom: -20px;
    }

    span a {
        color: white;
        text-decoration: none;
    }

    span:hover {
        padding: 10px 25px;
    }

    iframe {
        width: 800px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
        height: 400px;
        margin-top: 50px;
        max-width: 95%;
    }

</style>